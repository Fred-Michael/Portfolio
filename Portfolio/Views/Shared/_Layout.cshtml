<body>
    <nav class="navbar navbar-expand-md navbar-light">
        <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navigation">
            <ul class="navbar-nav nav-pills text-center mr-auto m-2">
                <li class="nav-item mr-sm-3">
                    <a class="myOwn" href="@Url.Action("Index", "Home")">About</a>
                </li>
                <li class="nav-item">
                    <a class="myOwn" href="@Url.Action("Contact", "Home")">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    @RenderBody()

    <footer style="background-color: #434E5E">
        <p class="m-0 text-center text-white">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</body>
</html>